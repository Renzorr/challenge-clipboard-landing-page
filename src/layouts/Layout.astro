---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Bai+Jamjuree:wght@400;600&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --strong-cyan: hsl(171, 66%, 44%);
    --light-blue: hsl(233, 100%, 69%);
    --dark-grayish-blue: hsl(210, 10%, 33%);
    --grayish-blue: hsl(201, 11%, 66%);
    --light-grayish: hsl(0deg 0% 96.08%);

    --shadow-cyan: hsl(170.89deg 63.71% 48.63% / 25%);
    --shadow-light-blue: hsl(233, 100%, 69%, 0.25);

    --fs-2xl: clamp(38px, 5cqw, 46px);
    --fs-xl: clamp(30px, 5cqw, 35px);
    --fs-lg: clamp(20px, 5cqw, 24px);
    --fs-md: 17px;
    --transition: 0.3s ease;
  }
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    color: inherit;
  }
  body {
    font-family: "Bai Jamjuree", sans-serif;
  }
  a {
    text-decoration: none;
  }
  img {
    max-width: 100%;
    object-fit: cover;
  }
  ul {
    list-style: none;
  }
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    color: var(--dark-grayish-blue);
  }
  p {
    color: var(--grayish-blue);
  }

  .sr-only {
    position: absolute;
    pointer-events: none;
    visibility: hidden;
  }

  .container {
    width: 100%;
    max-width: 1120px;
    margin-inline: auto;
    padding-inline: 5px;
  }

  .download_btn_area {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 15px;
    margin-top: 50px;

    & a {
      font-size: 17px;
      font-weight: 600;
      letter-spacing: 0.8px;
      color: white;
      border-radius: 30px;
      padding: 17px 36px;
      box-shadow: 0 12px 20px var(--shadow-color);
      transition: var(--transition);

      &:hover {
        transform: scale(1.02);
      }
      &:nth-child(1) {
        background-color: var(--strong-cyan);
        --shadow-color: var(--shadow-cyan);
      }
      &:nth-child(2) {
        background-color: var(--light-blue);
        --shadow-color: var(--shadow-light-blue);
      }
    }
  }
</style>
